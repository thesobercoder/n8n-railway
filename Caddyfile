:{$PORT} {
    @mcp path /mcp/* /rest/push/*

    handle @mcp {
        reverse_proxy {$N8N_HOST}:{$N8N_PORT} {
            header_down X-Accel-Buffering no
            header_down Cache-Control no-cache
            flush_interval -1
        }
    }

    handle {
        reverse_proxy {$N8N_HOST}:{$N8N_PORT}
    }
}